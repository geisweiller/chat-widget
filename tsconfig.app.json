{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    "baseUrl": "./src",
    "paths": {
      "features/*": ["features/*"],
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "types/*": ["types/*"],
      "assets/*": ["assets/*"]
    }
  },
  "include": ["src"]
}
